    printf "ğŸ”‡:%s%%" "$VOL"
elif [ "$VOL" -gt 00 ] && [ "$VOL" -le 30 ]; then
    printf "ğŸ”ˆ:%s%%" "$VOL"
elif [ "$VOL" -gt 30 ] && [ "$VOL" -le 70 ]; then
    printf "ğŸ”‰:%s%%" "$VOL"
